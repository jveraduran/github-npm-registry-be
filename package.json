{
  "name": "@jveraduran/github-npm-registry-be",
  "version": "1.0.12",
  "description": "<p align=\"left\" style=\"text-align:left;\">   <a href=\"https://www.githubuniverse.com/\">     <img alt=\"Github Universe\" src=\"img/github-universe-2022.png\" width=\"1040\"/>   </a> </p>",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "directories": {
    "test": "test"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/app/server/Index.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "build:ci": "npm run build && npm run types",
    "format": "prettier 'src/**/*.[jt]s?(x)' --write",
    "lint": "eslint src --ext js,ts",
    "lint:ci": "npm run lint:fix && npm run format && npm run sort",
    "lint:fix": "eslint src --ext js,ts --fix",
    "prepare": "is-ci || husky install",
    "prepublishOnly": "npm run build:ci",
    "sort": "sort-package-json package.json",
    "test:unit": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "test:dev": "jest --verbose --colors --expand --maxWorkers=50% --detectOpenHandles --errorOnDeprecated --bail",
    "test:watch": "jest --watch --verbose --colors --expand --maxWorkers=25%",
    "types": "dts-bundle-generator --config dts-generator.json"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Álvaro Recabal",
  "module": "dist/github-npm-registry-be.esm.js",
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/node": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.5",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@swc/core": "^1.2.226",
    "@swc/jest": "^0.2.22",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.7.2",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "dts-bundle-generator": "^6.12.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.7",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "http-status-codes": "^2.2.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "lockfile-lint": "^4.8.0",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.3",
    "sort-package-json": "^1.57.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4",
    "@faker-js/faker": "^7.4.0"
  },
  "engines": {
    "node": ">=14"
  }
}
